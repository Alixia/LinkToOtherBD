<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Lexsema</display-name>

	<servlet>
		<servlet-name>NIFWebService</servlet-name>
		<servlet-class>org.getalp.lexsema.ws.NIFWebService</servlet-class>
	</servlet>

	<servlet>
        	<servlet-name>HTMLTextAnnotator</servlet-name>
        	<servlet-class>org.getalp.lexsema.ws.HTMLTextAnnotator</servlet-class>
    	</servlet>

	<servlet-mapping>
		<servlet-name>NIFWebService</servlet-name>
		<url-pattern>/nifwebservice</url-pattern>
	</servlet-mapping>

    <servlet-mapping>
        <servlet-name>HTMLTextAnnotator</servlet-name>
        <url-pattern>/htmltextannotator</url-pattern>
    </servlet-mapping>
</web-app>
